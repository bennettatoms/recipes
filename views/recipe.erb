<section class="container-fluid recipe">
  <div class="row">
    <h2 class="text-center"><%= @recipe.name %></h2>
    <div class="col-md-4 col-md-offset-2">
      <dl class="dl-horizontal">
        <dt>Category:</dt>
        <dd><%= @recipe.category %></dd>
        <dt>Total Cooking Time:</dt>
        <dd><%= @recipe.cooking_time %></dd>
        <dt>Rating:</dt>
        <dd><%= @recipe.rating %></dd>
        <dt>Serves:</dt>
        <dd><%= @recipe.serves %></dd>
        <dt>Ingredients:</dt>
        <dd><%= @recipe.ingredients %></dd>
        <dt>Preparation:</dt>
        <dd><%= @recipe.preparation %></dd>
        <dt>Source:</dt>
        <dd><%= @recipe.source %></dd>
      </dl>

      <div class="back">
        <button type="button"
                class="btn btn-primary"
                onclick="window.history.back()">Back</button>
      </div>
    </div>

    <div class="col-md-4 item-image">
      <img class="middle" width=200px src="/images/<%= @recipe.image_file %>"/>
    </div>
  </div>
</section>
